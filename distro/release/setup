#!/bin/bash
INSTALL_PATH=~/Applications
read -t 5 -n 1 -p "Customize where Sireum should be installed under (defauts to $INSTALL_PATH) [Y/N]? " CUSTOM
echo ""
case ${CUSTOM} in
  y|Y) read -p "Enter the directory path [Press Enter to use the default]: " INSTALL_PATH;;
  *)
esac
INSTALL_PATH=${INSTALL_PATH:-~/Applications}
mkdir -p ${INSTALL_PATH}
rm -fR ${INSTALL_PATH}/Sireum
mv Sireum ${INSTALL_PATH}/
if [[ "$(uname)" == "Darwin" ]]; then
  echo "Sireum IVE can now be launched by opening ${INSTALL_PATH}/Sireum/bin/mac/idea/Sireum.app"
  echo "Java Development Kit (JDK) is available at ${INSTALL_PATH}/Sireum/bin/mac/java"
elif [[ "$(expr substr $(uname -s) 1 5)" == "Linux" ]]; then
  echo "Sireum IVE can now be launched by running ${INSTALL_PATH}/Sireum/bin/linux/idea/bin/idea.sh"
  echo "Java Development Kit (JDK) is available at ${INSTALL_PATH}/Sireum/bin/linux/java"
fi
echo "Scala is available at ${INSTALL_PATH}/Sireum/bin/scala"
echo "Mill can be found at ${INSTALL_PATH}/Sireum/bin/mill"
rm -- "$0"