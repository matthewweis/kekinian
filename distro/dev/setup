#!/bin/bash
read -p "Enter the directory where Sireum-dev should be installed under [Press Enter for ~/Applications]: " INSTALL_PATH
INSTALL_PATH=${INSTALL_PATH:-~/Applications}
mv Sireum-dev ${INSTALL_PATH}/
if [[ "$(uname)" == "Darwin" ]]; then
  echo "Sireum-dev IVE can now be launched by opening ${INSTALL_PATH}\Sireum-dev\bin\mac\idea\Sireum-dev.app"
  echo "Java Development Kit (JDK) is available at ${INSTALL_PATH}\Sireum-dev\bin\mac\java"
elif [[ "$(expr substr $(uname -s) 1 5)" == "Linux" ]]; then
  echo "Sireum-dev IVE can now be launched by running %INSTALL_PATH%\Sireum-dev\bin\linux\idea\bin\idea.sh"
  echo "Java Development Kit (JDK) is available at ${INSTALL_PATH}\Sireum-dev\bin\linux\java"
fi
echo "Scala is available at ${INSTALL_PATH}\Sireum-dev\bin\scala"
echo "Mill can be found at ${INSTALL_PATH}\Sireum-dev\bin\mill"
rm -- "$0"